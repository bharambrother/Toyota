/* Theme customization starts here
-------------------------------------------------------------- */
body:not(.template-slider) #Header {
    min-height: 90px;
}
p{
	font-weight:300;
}
#Content {
    padding-top: 0px;
}
#Action_bar{
    padding: 5.5px 0;
    text-align: right;
    border-bottom: 2px solid #e0e0e0;
}
.header-plain #Action_bar .contact_details li, .header-plain #Action_bar .social, .header-plain #Action_bar .social-menu {
    padding: 0px 0;
}

#Action_bar .social-menu li a{
    text-decoration: none;
    color: #666;
}
#Action_bar .social-menu li a:hover {
    color: #ce0000;
}

#Action_bar .social-menu li:first-child {
    border: none;
}

#Action_bar .social-menu li {
    text-align: left;
    padding: 0 10px;
    border-left: 1px solid #ccc;
	font-size: 11px;
	line-height:11px;
	 margin-right: 0px;
}

.menuo-right #Top_bar .menu_wrapper {
    margin-top:20px;
	margin-right: 0px;
}
#menu-top-menu .topsearch a:after {
    background-image: url(images/icon-search.svg);
    background-size: cover;
    width: 9px;
    height: 10px;
    display: block;
    content: "";
    float: right;
    margin-left: 5px;
}
.top_bar_right{
	display:none;
}
#Top_bar{
    border-bottom: 2px solid #dedede !important;
}
#Top_bar .menu > li{
	text-align: left;
    padding: 0 10px;
    border-left: 1px solid #ccc;
	font-size: 11px;
	line-height:11px;
	 margin-right: 0px;
}
#Top_bar .menu > li:first-child {
    border: none;
}
#Top_bar .menu > li:last-child a {
    color: #ce0000;
}

.header-plain #Top_bar .menu > li > a span{
    padding: 0px 0px !important;
	line-height: 22px !important;
	border-color: transparent !important;
}

#Top_bar .search_wrapper {
    height: 100%;
    top: 96px;
    opacity: 1;
    z-index: 200;
    -webkit-transition: opacity .3s ease-out;
    transition: opacity .3s ease-out;
	width: 100%;
    top: -9999;
    padding: 30px 20px 0;
    position: fixed;
    overflow: hidden;
    -webkit-transition: opacity .3s ease-in;
    transition: opacity .3s ease-in;
}
#Top_bar .search_wrapper form{
    width: 980px;
    margin: auto;
	position: relative;
}

#Top_bar .search_wrapper form input[type="text"] {
    width: 814px;
    height: 72px;
    padding: 10px 95px 0 4px !important;
    line-height: 1.2;
    font-size: 56px !important;
    display: inline-block;
    border: none;
    background: transparent;
	border-bottom:1px solid #ce0000 !important;
	color:#000;
}
#Top_bar .search_wrapper form button.icon_close{
	font-size: 56px !important;
	background:none !important;
	background-color:transparent !important;
	right: 0px;
    color: #ccc !important;
    opacity: 1;
	top: 12px;
	box-shadow: none;
}
#Top_bar .search_wrapper  form button.icon_close:hover {
    right: 0px;
    color: #ccc !important;
	background:#fff !important;
	background-color:#fff !important;
}
#Top_bar .search_wrapper  form button.icon_close:after{
	background:#none !important;
	background-color: transparent !important;
}
#Top_bar .search_wrapper  form button.submit-btn{
	background:none !important;
	background-color: transparent !important;
	color: #ce0000 !important;
	box-shadow: none;
	font-size: 56px !important;
	right: 140px;
	display:none;
	    position: absolute;
    top: 0;
}
#Top_bar .search_wrapper  form button.active{
	display:block;
}
#Top_bar .search_wrapper  form button.submit-btn:hover {
    color: #ce0000 !important;
	background:none !important;
	background-color: transparent !important;
}
#Top_bar .search_wrapper  form button.submit-btn:after{
	background:none !important;
	background-color: transparent !important;
}
#Top_bar .logo {
    margin: 0 30px 0 12px !important;
}
.headerimage{
	height:425px;	
}
.vdisabled{
	display:none;
}
.footer_top{
	border-bottom:1px solid dotted !important;
}
.footersearch{
	margin-bottom:20px !important;
}

.footersearch .icon-search{
	display:inline-block;
	color: #ce0000 ;
	    fill: #c00;
}
.footersearch form input[type="text"]{
	background: none !important;
    background-color: transparent !important;
    border: 0px !important;
    width: 350px;
    height: 30px;
    padding: 0px 0px 0 10px !important;
    line-height: 30px;
    font-size: 24px !important;
    display: inline-block;
    border: none;
    background: transparent;
    /* border-bottom: 1px solid #ce0000 !important; */
    color: #333;
    -webkit-box-shadow: none;
    box-shadow: none;
}
.footersearch  form button.submit-btn{
	background: none !important;
    background-color: transparent !important;
    color: #ce0000 !important;
    box-shadow: none;
    font-size: 30px !important;
    display:none;
    float: right;
    padding: 7px;
}
.footersearch  form button.active{
	display:block;
}
.footersearch form button.submit-btn:hover {
    color: #ce0000 !important;
	background:none !important;
	background-color: transparent !important;
}
.footersearch  form button.submit-btn:after{
	background:none !important;
	background-color: transparent !important;
}
.footer-utility__sharing li, .footer-utility__sharing li > a, .footer-utility__sharing li svg {
    width: 45px;
    height: 45px;
}
.footer-utility__sharing li {
    margin-left: 10px;
    display: inline-block;
    border-radius: 50px;
    -webkit-transition: background-color .3s;
    transition: background-color .3s;
    vertical-align: top;
}
.footer-utility__sharing li svg {
    fill: #fff;
}
.footer-utility__sharing__facebook {
    background-color: #375594 !important;
}
.footer-utility__sharing__youtube {
    background-color: #fff !important;
}
.footer-utility__sharing__twitter {
    background-color: #00a7ef !important;
}
.footer-utility__sharing__google-plus {
    background-color: #cf0f0f;
}
.footer-utility__sharing__instagram {
    background-color: #1c5380 !important;
}
.footer-utility__sharing__youtube .you {
    color: #000;
    fill: #000;
}
.footer-utility__sharing__youtube .tube {
    color: #eb242e;
    fill: #eb242e;
}
.footer-utility__sharing li svg.tcom-icon-social-google {
    width: 25px;
    margin: 0 auto;
    display: block;
}

.footer-utility__sharing .back-to-top {
    position: relative;
    border: none;
    margin-right: -55px;
    left: calc((50vw - 555px) / 1.75);
}
.footer-utility__sharing{
	text-align:right;
	margin: 0 0 0px 0px !important;
}
.tcom-footer-links-list{
	margin-left:0px !important;
	font-size:13px;
	font-weight:400;
	line-height: 18px;
}

.tcom-footer-links-list li{
	list-style:none !important;
	margin-bottom:5px !important;
}
.tcom-footer-links-list li a{
	color:#333;	
}
.tcom-footer-links-list li a:hover{
	color: #c00;
	text-decoration:none;
}
.tcom-footer-bottom-list{
	margin: 0 0 0px 0px !important;
}
.tcom-footer-bottom-list li {
    height: auto;
    margin-bottom: 0;
}
.tcom-footer-bottom-list li{
    font-size: 13px;
    margin-bottom: 0.5em;
    float: left;
    line-height: 13px;
	list-style:none !important;
}
.tcom-footer-bottom-list li a{
    display: block;
    padding: 0 5px;
    float: left;
    color: #666;
}
.tcom-footer-bottom-list li:first-child a{
	padding: 0 5px 0 0;
}
.tcom-footer-bottom-list a {
    text-decoration: none;
}
.tcom-footer-bottom-list li.privacy:before{
	display:none !important;
}
.tcom-footer-bottom-list li:before {
    display: block;
    width: 1px;
    height: 12px;
    float: left;
    background: #8f8f8f;
    content: '';
}
.tcom-footer-bottom-list li img{
    display: block;
    float: left;
    position: relative;
    bottom: 4px;
}
.footertext{
	clear:both;	
}
#Footer{
	display:none;
}
.headline{
	position:relative;	
}
.headline:before {
    content: '';
    width: 40px;
    height: 2px;
    bottom: -15px;
    left: 50%;
    position: absolute;
    border-top: 2px solid #c90813;
    -webkit-transform: translateX(-50%);
    transform: translateX(-50%);
}
.uppercase{
	text-transform:capitalize;
}